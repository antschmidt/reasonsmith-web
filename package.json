		"@nhost/nhost-js": "^3.3.1",
		"@tiptap/extension-bubble-menu": "^3.3.1",
		"@vercel/analytics": "^1.5.0",
		"graphql": "^16.11.0",
		"svelte-tiptap": "^2.2.0"
	}
}
